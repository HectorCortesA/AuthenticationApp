<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Imagen del platillo -->
    <ImageView
        android:id="@+id/imageViewPlatilloDetalle"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop" />

    <!-- Nombre del platillo -->
    <TextView
        android:id="@+id/textViewNombrePlatilloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"/>

    <!-- DescripciÃ³n del platillo -->
    <TextView
        android:id="@+id/textViewDescripcionPlatilloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Ingredientes del platillo -->
    <TextView
        android:id="@+id/textViewIngredientesPlatilloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

    <!-- Pasos para la receta -->
    <TextView
        android:id="@+id/textViewPasosPlatilloDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>

</LinearLayout>
