<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9F5DB"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Campo para el nombre -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <EditText
            android:id="@+id/editTextNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre del platillo"
            android:inputType="text" />

        <!-- Campo para la descripci贸n -->
        <EditText
            android:id="@+id/editTextDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripci贸n"
            android:inputType="textMultiLine"
            android:lines="3" />

        <!-- Campo para los ingredientes -->
        <EditText
            android:id="@+id/editTextIngredientes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingredientes (separados por comas)"
            android:inputType="textMultiLine"
            android:lines="3" />

        <!-- Campo para los pasos -->
        <EditText
            android:id="@+id/editTextPasos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pasos de preparaci贸n"
            android:inputType="textMultiLine"
            android:lines="4" />
        <Spinner
            android:id="@+id/spinnerCategoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:spinnerMode="dropdown" />


        <!-- Vista para seleccionar la imagen -->

        <!-- Imagen seleccionada -->
        <Button
            android:id="@+id/buttonSeleccionarImagen"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center|center_vertical"
            android:background="@drawable/border"
            android:gravity="center_horizontal"
            android:includeFontPadding="false"
            android:text="Seleccionar imagen" />

        <ImageView
            android:id="@+id/imageViewSeleccionada"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="8dp"
            android:background="@color/black" />

        <!-- Bot贸n para guardar -->
        <Button
            android:id="@+id/buttonGuardarReceta"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_gravity="center|center_vertical"
            android:layout_marginTop="16dp"
            android:background="@drawable/border"
            android:backgroundTint="#6CA76F"
            android:gravity="center_vertical"
            android:text="Guardar receta"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
